<UserControl x:Class="Listings.Views.ProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Listings.Views"
             mc:Ignorable="d" d:DesignWidth="300" Height="77.711">

    <StackPanel>
        <TextBlock Margin="0 0 0 5" Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" />
        <ProgressBar Height="25" Minimum="0" Maximum="100" IsIndeterminate="True" />
    </StackPanel>

</UserControl>
